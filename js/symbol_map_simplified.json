{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Eason0906/homework/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Eason0906/homework/main/data/target.csv"
      },
      "encoding": {
        "longitude": {"field": "Address.Longitude", "type": "quantitative"},
        "latitude": {"field": "Address.Latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "tooltip": {"content": "data"}
          },
          "encoding": {
            "color": {"field": "depth", 
                      "type": "quantitative",
                      "scale":{
                          "scheme":"reds"
                      }          
            }
          }
        }
      ]
    }
  ]
}
